<h3>{{viewTitle}}</h3>

<form action="/registration" method = "POST" autocomplete="off">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{registration.fullName}}">
        <div class="text-danger">
            {{registration.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="mail" placeholder="Email" value="{{registration.mail}}">
        <div class="text-danger" >
            {{registration.mailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{registration.mobile}}">
            <div class="text-danger">
                {{registration.mobileError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Department</label>
            <input type="text" class="form-control" name="department" placeholder="Department" value="{{registration.department}}">
            <div class="text-danger">
                {{registration.departmentError}}
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>submit</button>
    </div>
</form>
